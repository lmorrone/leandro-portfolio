---
import Section from "@/components/Section.astro";
import { languages } from "@cv";
---

<Section title="Idiomas">
  <ul>
    {
      languages.map(({ language, fluency }) => {
        return (
          <li>
            <span class="text-gray-950">{language}</span> &middot;
            <span>{fluency}</span>
          </li>
        );
      })
    }
  </ul>
</Section>
