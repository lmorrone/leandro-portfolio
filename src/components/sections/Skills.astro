---
import Section from "@/components/Section.astro";
import { getI18n } from "@/i18n";
import { getCv } from "@cv";

const { currentLocale } = Astro;
const { skills } = getCv(currentLocale);

const i18n = getI18n(currentLocale);
---

<Section title={i18n.TITLE_SKILLS}>
  <ul class="flex flex-wrap items-center gap-1">
    {
      skills.map(({ name, level }) => {
        const classLevel =
          level === "1"
            ? "bg-gray-700 hover:bg-gray-600 dark:bg-gray-200 dark:hover:bg-gray-300"
            : level === "2"
              ? "bg-gray-500 hover:bg-gray-400 dark:bg-gray-400 dark:hover:bg-gray-500"
              : "bg-gray-400 hover:bg-gray-500 dark:bg-gray-500 dark:hover:bg-gray-400";

        return (
          <li
            class={`px-3 py-1 ${classLevel} rounded-md text-xs font-semibold text-white dark:text-gray-950 transition-all print:text-gray-950`}
          >
            {name}
          </li>
        );
      })
    }
  </ul>
</Section>
